    <!-- We will manually add the JNI code to make this return an int instead of Java.Lang.Integer -->
    <remove-node path="/api/package[@name='com.estimote.sdk']/class[@name='Region']/method[@name='getMinor' and count(parameter)=0]" />
    <remove-node path="/api/package[@name='com.estimote.sdk']/class[@name='Region']/method[@name='getMajor' and count(parameter)=0]" />

